@model  Sagu.MVC.Models.AnimalsViewModel

@{
    ViewBag.Title = "Animals";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Kana
        </th>
        <th>
            Is Unique
        </th>
        <th>
            Encounter Rate
        </th>
        <th>
            Area
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Animals) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kana)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsUnique)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EncounterRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Area.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "View", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
